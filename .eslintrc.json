{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "scope:web-app",
                "onlyDependOnLibsWithTags": ["scope:client-shared", "scope:client-web", "scope:web-app"]
              },
              {
                "sourceTag": "scope:client-web",
                "onlyDependOnLibsWithTags": ["scope:client-shared", "scope:client-web"]
              },
              {
                "sourceTag": "scope:client-shared",
                "onlyDependOnLibsWithTags": ["scope:client-shared"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
